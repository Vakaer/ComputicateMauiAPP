                                            FontSize="12"
                                            Text="Olivia Brewr"
                                            TextColor="#243143" />
                                        <Label
                                            FontSize="12"
                                            Text="Royal Bank of Scotland, "
                                            TextColor="#677383" />
                                        <Label
                                            FontSize="12"
                                            Text="20160929-4"
                                            TextColor="#677383" />
                                        <Label
                                            FontSize="12"
                                            Text="Time Spent: 0h 0min 03-01-2019"
                                            TextColor="#677383" />
                                    </VerticalStackLayout>
                                    <HorizontalStackLayout Grid.Row="2" VerticalOptions="Center">
                                        <Label
                                            FontAttributes="Bold"
                                            Text="Billable: "
                                            TextColor="#243143" />
                                        <Label Text="No" TextColor="#243143" />
                                    </HorizontalStackLayout>
                                </Grid>
