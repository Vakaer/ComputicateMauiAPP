                                Margin="30,0"
                                BackgroundColor="#D5E2F4"
                                StrokeShape="RoundRectangle 8,8,0,0"
                                StrokeThickness="0">
                                <Border.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Source={x:Reference MyExpander}, Path='IsExpanded'}"
                                        TargetType="Border"
                                        Value="false">
                                        <Setter Property="StrokeShape" Value="RoundRectangle 8,8,8,8" />
                                    </DataTrigger>
                                </Border.Triggers>
                                <Grid
                                    x:Name="ListHeader"
                                    ColumnDefinitions="*,Auto"
                                    RowDefinitions="Auto,Auto"
                                    RowSpacing="0"
                                    Style="{StaticResource ExpanderHeader}"
                                    VerticalOptions="Center">
                                    <HorizontalStackLayout Grid.Row="0" Grid.Column="0">
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="14"
                                            Text="03/01/2019" />
                                        <Label FontSize="14" Text=", Thursday" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Spacing="5">
                                        <Label FontSize="10" Text="Total: " />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="10"
                                            Text="30" />
                                        <Label FontSize="10" Text="minutes" />
                                    </HorizontalStackLayout>
                                    <StackLayout Grid.Row="0" Grid.Column="1">
                                        <Image
                                            x:Name="img"
                                            Margin="0,10,0,0"
                                            Aspect="AspectFit"
                                            Rotation="0"
                                            Source="up_arrow.svg">
                                            <Image.Triggers>
                                                <DataTrigger
                                                    Binding="{Binding Source={x:Reference MyExpander}, Path='IsExpanded'}"
                                                    TargetType="Image"
                                                    Value="True">
                                                    <Setter Property="Rotation" Value="180" />
                                                </DataTrigger>
                                            </Image.Triggers>
                                        </Image>
                                    </StackLayout>

                                </Grid>
                            </Border>
                        </views:Expander.Header>
                        <views:Expander.Content>
